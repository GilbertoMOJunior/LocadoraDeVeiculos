@model IEnumerable<ControleCinema.WebApp.Models.ListarVeiculoViewModel> 
@{
	ViewBag.Title = "Listagem de Veiculos";
}

<div class="col">
	<a class="btn btn-primary px-4 mt-3" href="/veiculo/inserir">
		Inserir Novo Veiculo
	</a>
	
	<div class="row gap-2 my-3 my-xl-5">
		@foreach (var veiculoVm in Model)
		{
			<div class="card col-lg-4 col-xl-3">
				<div class="card-header bg-transparent d-flex justify-content-between align-items-center">
					<h5 class="p-0">@veiculoVm.Id</h5>
					
					<div class="text-end d-flex align-items-center gap-3">
						<a
							title="Detalhes"
							class="text-info-emphasis fs-5"
							href="/veiculo/detalhes/@veiculoVm.Id">
							<i class="bi bi-search"></i>
						</a>
						
						<a
							title="Editar"
							class="text-info-emphasis fs-5"
							href="/veiculo/editar/@veiculoVm.Id">
							<i class="bi bi-pencil-fill"></i>
						</a>
						
						<a
							title="Excluir"
							class="text-info-emphasis fs-5"
							href="/veiculo/exclir/@veiculoVm.Id">
							<i class="bi bi-trash-fill"></i>
						</a>
					</div>
				</div>
				<div class="card-body d-grid gap-2">
					<h5 class="card-title">@veiculoVm.Id</h5>
					<label>@veiculoVm.Placa</label>
					<span class="rounded-2 text-bg-primary text-center ppx-3 py-1">
						<small>@veiculoVm.Placa</small>
					</span>
				</div>
			</div>
		}
	</div>
</div>